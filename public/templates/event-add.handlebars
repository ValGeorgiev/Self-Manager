<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 id="addTodoHeader">Add new Event</h2>
        </div>
    </div>
    <div class="row">
        <div id="navbarTodo" class="col-sm-12">
            <div class="row">
                <div class="col-sm-10">
                    <button id="myTodo"><a href="#/todos">My TODOs</a></button>
                    <button id="myEvents"><a href="#/events">My Events</a></button>
                </div>
                <div class="col-sm-2">
                    <button id="logOut"><a href="#/login">Log Out</a></button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <form class="form-horizontal">
                <fieldset>
                    <div class="form-group">
                        <label for="tb-event-title">Title: </label>
                        <input id="tb-event-title" class="form-control" type="text" placeholder="Title..." maxlength="20"/>
                    </div>
                    <div class="form-group">
                        <label for="tb-event-category">Category: </label>
                        <input id="tb-event-category" class="form-control" type="text" placeholder="Category..." maxlength="20"/>
                    </div>
                    <div class="form-group">
                        <label for="tb-event-date">Date: </label>
                        <input id="tb-event-date" class="form-control" placeholder="Date..."/>
                    </div>
                    <div class="form-group">
                        <label for="tb-event-time">Time: </label>
                        <input id="tb-event-time" class="form-control" placeholder="Time..."/>
                    </div>
                    <div class="form-group">
                        <label for="tb-event-description">Description: </label>
                        <input id="tb-event-description" class="form-control" placeholder="Description..."/>
                    </div>

                    <button id="btn-event-add">Add</button>
                </fieldset>
            </form>
        </div>
    </div>
</div>


